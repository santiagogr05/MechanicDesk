@page
@model VehiclesPageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Vehículos</h1>

<form method="get" class="mb-4">
    <div class="form-group">
        <label for="placa">Buscar por placa:</label>
        <input type="text" id="placa" name="FiltroPlaca" value="@Model.FiltroPlaca" class="form-control" />
        <button type="submit" class="btn btn-primary mt-2">Buscar</button>
        <a href="/Vehicles" class="btn btn-secondary mt-2 ms-2">Limpiar</a>
    </div>
</form>

@if (Model.VehiclesList?.Any() == true)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Placa</th>
                <th>Chasis</th>
                <th>Color</th>
                <th>Motor</th>
                <th>Cliente</th>
                <th>Marca</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model.VehiclesList)
            {
                <tr>
                    <td>@vehicle.Plate</td>
                    <td>@vehicle.Chassis</td>
                    <td>@vehicle.Color</td>
                    <td>@vehicle.Engine</td>
                    <td>@vehicle._Customer?.CustomerName</td>
                    <td>@vehicle._Brand?.BrandName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron vehículos.</p>
}
